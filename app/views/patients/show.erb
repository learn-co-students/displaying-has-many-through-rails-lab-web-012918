<% @patient.appointments.each do |appointment| %>
  <%= "#{appointment.appointment_datetime.strftime('%B')} #{appointment.appointment_datetime.strftime('%d')}, #{appointment.appointment_datetime.strftime('%G')} at #{appointment.appointment_datetime.strftime('%R')}" %><br>
  <%= link_to appointment.doctor.name, doctor_path(appointment.doctor) %><br>
<% end %>
